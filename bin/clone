#!/data/data/com.termux/files/usr/bin/bash

# Ask for URL
url=$(termux-dialog text -t "🌐 Website Cloner" -i "Ent>
[ -z "$url" ] && termux-toast -b red "❌ No URL entered>

# Extract domain
sitename=$(echo "$url" | awk -F[/:] '{print $4}' | sed >
folder="/storage/emulated/0/downloads/$sitename"

# Estimate size
size=$(curl -sI "$url" | grep -i Content-Length | awk '>
[ -z "$size" ] && size="Unknown" || size=$(numfmt --to=>

# Confirm
termux-dialog confirm -t "Confirm Download?" -i "Target>
Save to: $folder
Estimated Size: $size" > /dev/null
[ $? -ne 0 ] && termux-toast -b red "❌ Cancelled." && >

# Show progress
termux-toast -b blue -g top "⚙️ Cloning $sitename..."

# Clone
httrack "$url" -O "$folder" "+*.${sitename}/*" -v

# Done
termux-toast -b green -g top "✅ Done! Saved in Downloads>
termux-notification --title "Cloning Complete" --content >

clear